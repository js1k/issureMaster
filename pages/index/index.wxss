/**index.wxss**/
.home-model{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  background:rgba(5, 5, 5, 0.5);
  z-index: 99;
  display: flex;
  justify-content: center;
}
.home-rules{
  width:683rpx;
  height:828rpx;
  position: absolute;
  bottom: 0;
  animation: ruleUp 0.4s ease;
  z-index: 100
}
.homepage{
  width:100%;
  height:100%;
  position:relative;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow-x:hidden;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #460EBA ,#644BD4, #5F8AEE); /* 标准的语法 */
}
.home-user{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left:32rpx;
  margin-top:30rpx;
  position: relative;
}
.home-user-header{
  width:98rpx;
  height:98rpx;
  border-radius: 50%;
  margin-right:16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background:linear-gradient(360deg,rgba(236,53,52,1) 0%,rgba(246,141,90,1) 46%,rgba(250,199,111,1) 100%);
}
.header-image{
  width:92rpx;
  height:92rpx;
  border-radius: 50%;
}
.user-name{
  display: inline-block;
  margin-bottom:10rpx;
  width:100%;
}
.user-info{
  display: flex;
  align-items: center;
}
.user-level{
  height:36rpx;
  width:82rpx;
}
.home-section{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: flex-start; */
  justify-content: space-between;
  width:100%;
  height:100%;
  z-index: 9;
}
.loop-content{
  position: absolute;
  left:32rpx;
  bottom:172rpx;
}
.loop-box{
  position:absolute;
  left:112rpx;
  bottom:310rpx;
  display:flex;
  flex-direction: column;
  width:100%;
}
.loop-inner{
  position: relative;
  width:100%;
}
.loop-text{
  color:#fff;
  font-size:22rpx;
  background:rgba(29,202,134,1);
  border-radius: 18rpx;
  padding:4rpx 10rpx;
  opacity: 0;
  position: absolute;
  bottom: 0;
}
.loop-before{
  animation: loopText 3s linear infinite;
}
.loop-after{
  animation: loopText 3s linear infinite;
  animation-delay:1.75s;
}
.home-arrow{
  width:44rpx;
  height:44rpx;
  margin-top:32rpx;
  /* animation:arrowMove 1s ease-in alternate infinite; */
}
.season-stragety{
  width:91.4%;
  height:64rpx;
}
.menu-content{
  position: absolute;
  right:26rpx;
  top:132rpx;
  z-index: 99;
}
.menu-icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom:16rpx;
}
.menu-img{
  width:64rpx;
  height:64rpx;
}
.cloud-left{
  position:absolute;
  animation: cloudLeft 25s linear infinite alternate;
}
.cloud-right{
  position:absolute;
  animation: cloudRight 25s linear infinite alternate;
}
.season1-cloud-left{
  width:36px;
  height:22px;
  top:35px;
}
.season1-cloud-right{
  width:26px;
  height:16px;
  top:90px;
}
.season2-cloud{
  width:94rpx;
  height:58rpx;
  z-index: 99;
  top:256rpx;
}
.season-pic{
  animation: seasonMove 3s linear infinite alternate;
  z-index: 9;
}
.insurance-policy{
  width:80rpx;
  height:60rpx;
  z-index: 99;
  position: absolute;
  left:80rpx;
  top:306rpx;
  animation: insurancePolicy 20s linear infinite alternate;
}
.season3-cloud-left{
  width:82rpx;
  height:50rpx;
  top:70rpx;
}
.season3-cloud-right{
  width:138rpx;
  height:84rpx;
  top:178rpx;
}
.season4-cloud-left{
  width:122rpx;
  height:74rpx;
  top:74rpx;
}
.season4-cloud-right{
  width:102rpx;
  height:62rpx;
  top:178rpx;
}
.begin-answer{
  width:298rpx;
  height:88rpx;
  margin-top:60rpx;
  animation: beginAnswer 2s linear infinite alternate;
}
.home-main-pic{
  width:261px;
  height:261px;
}
.home-btm-bg{
  width:100%;
  height:640rpx;
  position:absolute;
  bottom:0;
  left:0;
  z-index:0
}
.home-time{
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:12px;
  margin-top:10px
}
.home-theme{
  font-size:38rpx;
  font-weight:500;
  color:rgba(255,216,94,1);
  line-height:19px;
  margin:30rpx 0;
}
.home-logo{
  width:342rpx;
  height:120rpx
}
.bao-bao{
  width:128rpx;
  height:128rpx;
  animation: logoMove 2s linear infinite alternate;
}
.icon-content{
  position: relative;
  width:64rpx;
  height:64rpx;
}
.icon-font{
  font-size:22rpx;
  color:#fff;
  margin-top:8rpx;
}
.task-num{
  font-size:16rpx;
  color:rgba(255,255,255,1);
  border-radius: 20rpx;
  background:linear-gradient(360deg,rgba(231,13,46,1) 0%,rgba(253,111,99,1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  width:44rpx;
  height:20rpx;
  position: absolute;
  top:-6rpx;
  right:-20rpx;
}
@keyframes cloudLeft{
  0%{
    left:0px 
  }
  25%{
    left: 48px
  }
  50%{
    left: 88px
  }
  75%{
    left: 48px
  }
  100%{
    left:0px
  }
}
@keyframes cloudRight{
  0%{
    right:0px 
  }
  25%{
    right:50px 
  }
  50%{
    right:90px 
  }
  75%{
    right:50px 
  }
  100%{
    right:0px 
  }
}

@keyframes loopText{
  0%{
    transform: translateY(40rpx);
    opacity: 1
  }
  100%{
    transform: translateY(-85rpx);
    opacity: 0
  }
}
@keyframes beginAnswer{
  0%{
    transform:scale(1)
  }
  100%{
    transform:scale(1.1)
  }
}
@keyframes arrowMove{
  0%{
    transform: translateY(10rpx);
  }
  100%{
    transform: translateY(-15rpx);
  }
}
@keyframes logoMove{
  0%{
    transform: translate(-5rpx,10rpx);
  }
  100%{
    transform: translate(5rpx,-15rpx);
  }
}
@keyframes seasonMove{
  0%{
    transform: translate(-5rpx,10rpx);
    transform:scale(1)
  }
  100%{
    transform: translate(5rpx,-15rpx);
    transform:scale(1.05)
  }
}
@keyframes insurancePolicy{
  0%{
    left:40px;
    top:153px;
  }
  10%{
    left:60px;
    top:183px;
  }
  20%{
    left:90px;
    top:213px;
  }
  30%{
    left:120px;
    top:183px;
  }
  40%{
    left:160px;
    top:153px;
  }
  50%{
    left:200px;
    top:123px;
  }
  60%{
    left:240px;
    top:93px;
  }
  70%{
    left:200px;
    top:53px;
  }
  80%{
    left:160px;
    top:13px;
  }
  90%{
    left:120px;
    top:53px;
  }
  100%{
    left:80px;
    top:83px;
  }
}
@keyframes ruleUp{
  from {
    bottom:-823rpx;
  }
  to{
    bottom:0rpx;
  }
}
