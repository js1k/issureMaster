.challenge-page {
    width: 100%;
    height: 100%;
    background: linear-gradient(136deg, rgba(70, 14, 186, 1) 0%, rgba(95, 138, 238, 1) 100%);
    padding: 202rpx 40rpx 32rpx;
}

.section {
    width: 100%;
    height: 100%;
}

.privilegev-card {
    width: 100%;
    border-radius: 0px 12rpx 12rpx 0px;
    overflow: hidden;
    padding: 4rpx;
    opacity: 0;
    animation: showCardBar 2.8s linear forwards;
}

.privilege-title {
    width: 44rpx;
    height: 110rpx;
    writing-mode: tb-rl;
    background: rgba(91, 155, 255, 1);
    box-shadow: 0px 0px 12rpx 6rpx rgba(255, 241, 253, 0.6);
    border-radius: 12rpx 0px 0px 12rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.privilege-contain {
    width: 100%;
    padding: 8rpx 50rpx;
    border: 2rpx solid #78c7fe;
    border-radius: 0px 12rpx 12rpx 0px;
    background: linear-gradient(180deg, rgba(49, 146, 185, 0.3) 0%, rgba(12, 55, 84, 0.1) 100%);
}

.privilege-pic {
    width: 72rpx;
    height: 96rpx;
    margin-right:32rpx;
}
.privilege-pic:last-child{
    margin-right:0;
}

.test-submit {
    width: 402rpx;
    height: 88rpx;
}

.submit {
    width: 100%;
    height: 100%;
    opacity: 0;
    animation: showCardBar 2.8s linear forwards;
}

.question {
    width: 100%;
    height: 824rpx;
    background: rgba(255, 248, 248, 1);
    box-shadow: 0px 4rpx 14rpx 0px rgba(8, 11, 194, 0.5);
    border-radius: 20rpx;
    padding: 16rpx;
    position: relative;
}

.question-container {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    border: 2rpx solid rgba(249, 192, 192, 1);
}

.clock-box {
    width: 128rpx;
    height: 128rpx;
    position: absolute;
    top: -64rpx;
    left: 271rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 8px 0px rgba(146, 20, 20, 0.5);
}

.clock-contain {
    width: 128rpx;
    height: 128rpx;
    position: relative;
}

.clock-num {
    font-size: 44rpx;
    font-weight: 500;
    color: rgba(252, 128, 17, 1);
}

.clock-txt {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    z-index: 99;
    position: absolute;
    left:12rpx;
    top:12rpx;
    border:6rpx solid #FF732C;
    box-shadow:0px 0px 7px 0px rgba(146,20,20,0.5);
}
.clock-icon {
    width: 16rpx;
    height: 52rpx;
    margin-top: -26rpx;
}
.before-txt{
    font-size:92rpx;
    font-weight:500;
    color:rgba(58,61,79,1);
    opacity: 0;
    width:100%;
    height:100%;
    position: absolute;
    left:0;
    top:0;
}
.ready-txt{
    animation: readyIn 1s linear forwards;
}
.start-txt{
    animation: startIn 2s linear forwards;
}

.question-list{
    opacity: 0;
    background:rgba(255,248,248,1);
    animation: questionIn 2.6s ease-in forwards;
}
.question-tips{
    font-size:22rpx;
    font-weight:500;
    color:rgba(143,143,143,1);
    margin-bottom: 32rpx;
}
.question-index{
    width:44rpx;
    height:44rpx;
    margin-right:44rpx;
    border-radius: 50%;
    background:rgba(232,233,241,1);
    font-size:28rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.current-index{
    background:rgba(255,106,53,1);
}
.wrong-index{
    border:1px solid rgba(255,80,80,1);
    color:rgba(255,80,80,1);
    background:white;
}
.done-index{
    border:1px solid rgba(27,214,118,1);
    color:rgba(27,214,118,1);
    background:white;
}
.question-index:last-child{
    margin-right:0;
}
.question-info{
    margin-bottom:48rpx;
}
.queistion-name{
    width:506rpx;
    height:132rpx;
    text-align: center;
    font-size:32rpx;
    font-weight:500;
    color:rgba(58,61,79,1);
    margin-bottom:44rpx;
}

.question-answer{
    width:506rpx;
    height:88rpx;
    background:rgba(232,233,241,1);
    border-radius:44rpx;
    margin-bottom:48rpx;
    position: relative;
}
.question-answer:last-child{
    margin-bottom:0;
}
.question-icon{
    width:44rpx;
    height:44rpx;
    position: absolute;
    top:22rpx;
    right:32rpx;
}
.item-chosed{
    background:rgba(27,214,118,1);
    color:white;
}
.item-nochosed{
    background:rgba(232,233,241,1);
    color:rgba(217,215,228,1);
}
.unfinshed-back{
    width:490rpx;
    /* height:230rpx; */
    background:rgba(255,255,255,1);
    border-radius:20rpx;
    padding:34rpx 0 10rpx;
}
.unfinshed-txt{
    width:100%;
    text-align: center;
    font-size:32rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.unfinshed-btn{
    width:100%;
    height:80rpx;
    margin-top:34rpx;
    border-top:2rpx solid #ececec;
}
.btn{
    font-size:32rpx;
    height:100%;
    flex-grow: 1;
    font-weight:400;
    color:rgba(153,153,144,1);
}
.go-on{
    color:rgba(27,214,118,1);
    border-left:2rpx solid #ececec;
}
@keyframes questionIn{
    0%{
        transform: translateY(20rpx);
        opacity: 0
    }
    76%{
        opacity: 0
    }
    77%{
        transform: translateY(20rpx);
        opacity: 0.5
    }
    100%{
        transform: translateY(0rpx);
        opacity: 1
    }
}
@keyframes readyIn{
    0%{
        transform: scale(3);
        opacity: 1
    }
    40%{
        transform: scale(1);
        opacity: 1
    }
    99%{
        opacity: 1
    }
    100%{
        opacity: 0
    }
}

@keyframes startIn{
    0%{
        opacity: 0
    }
    49%{

        opacity: 0
    }
    50%{
        transform: scale(3);
        opacity: 1
    }
    70%{
        transform: scale(1);
        opacity: 1
    }
    99%{
        transform: scale(1);
        opacity: 1
    }
    100%{
        transform: scale(1);
        opacity: 0
    }
}
@keyframes showCardBar{
    0% {
        opacity: 0;
        transform: translateY(30rpx)
    }
    71%{
        opacity: 0;
        transform: translateY(30rpx)
    }
    100%{
        opacity: 1;
        transform: translateY(0rpx)
    }
}

