/**app.wxss**/
.container {
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  width:100%;
  height:100%;
  background:#460EBA;
  font-size: PingFangSC-Medium;
}
view{
  box-sizing: border-box;
}
.com-mask{
  width:100%;
  height:100%;
  position: fixed;
  left:0;
  top:0;
  padding-top:120rpx;
  background:rgba(0, 0, 0, 0.8);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.flx-ce{
  display: flex;
  align-items: center;
}
.flx-ce-ce{
  display: flex;
  align-items: center;
  justify-content: center;
}
.flx-ce-str{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.flx-start-clm{
  display: flex;
  flex-direction: column;
}
.flx-ce-bet{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flx-ce-no-clm{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.flx-ce-clm{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.flx-ce-bet-clm{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}
.flx-ce-end{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.tab-content{
  display: flex;
  align-items: center;
  border-radius:32rpx;
  border:2rpx solid rgba(255,255,255,0.5);
}
.nav-tab{
  font-size:28rpx;
  color:rgba(255,255,255,0.5);
  font-weight:500;
  width:200rpx;
  height:60rpx;
}
.tab-actived{
  background:linear-gradient(270deg,rgba(255,210,92,1) 0%,rgba(255,137,33,1) 100%);
  border-radius: 30rpx;
  color:rgba(255,255,255,1);
}
.go-back{
  position: fixed;
  top:62rpx;
  left:32rpx;
  z-index: 999;
  width:44rpx;
  height:44rpx;
}
.scaleBig{
    animation: scaleBig 1s forwards;
}
.relative{
  position: relative;
}
.open-pic-box{
    width:562rpx;
    height:562rpx;
    border-radius: 50%;
    position: relative;
}
.open-box-img{
    width:562rpx;
    height:562rpx;
    border-radius: 50%;
}
.open-light{
    width:562rpx;
    height:562rpx;
    border-radius: 50%;
    position: absolute;
    left:0;
    top:0;
    animation: lightShow 4s linear infinite;
}
.open-txt{
    font-size:36rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    margin:24rpx 0 72rpx;
}
.btn-open{
    width:422rpx;
    height:88rpx;
    background:rgba(255,167,0,1);
    box-shadow:0px 0px 20rpx 0px rgba(255,255,255,0.8);
    border-radius:44rpx;
    font-size:34rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.tiyanshi-img{
    width:88rpx;
    height:88rpx;
    background:linear-gradient(180deg,rgba(255,98,0,1) 0%,rgba(202,22,5,1) 100%);
    border-radius:16rpx;
    border:4rpx solid;
    margin-right:40rpx;
    /* border-image:linear-gradient(180deg, rgba(127,217,255,1), rgba(42,58,174,1)) 2 2; */
}
.knapsack-close-box {
    width: 100%;
    text-align: right;
}
.knapsack-close {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 16rpx;
}
.open-box-layer{
    animation: changeScale 0.6s ease forwards;
}
.open-box-container{
    width:514rpx;
    height:712rpx;
    position: relative;
    padding-top:304rpx;
}
.open-bg{
    width:100%;
    height:100%;
    position: absolute;
    left:0;
    top:0;
    z-index: -1;
}
.open-title{
    font-size:40rpx;
    font-weight:500;
    margin-bottom:48rpx;
    color:rgba(255,255,255,1);
}
.xueyi-card-name{
    font-size:30rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.open-chose-pic{
    width:144rpx;
    height:144rpx;
    margin:16rpx 0 8rpx;
}
.put-in-bag{
    width:422rpx;
    height:88rpx;
    margin-top:140rpx;
}
@keyframes changeScale{
    from{
        transform: scale(0.5)
    }
    to{
        transform: scale(1)
    }
}
@keyframes scaleBig{
    from{
        transform: scale(0.5);
        opacity: 0.4
    }
    to{
        transform: scale(1);
        opacity: 1
    }
}
@keyframes lightShow{
    0%{
        opacity: 0.3;
        transform: rotate(0deg)
    }
    40%{
        opacity: 1;
        transform: rotate(40deg)
    }
    50%{
        opacity: 0.6;
        transform: rotate(50deg)
    }
    60%{
        opacity: 1;
        transform: rotate(60deg)
    }
    80%{
        opacity: 0.6;
        transform: rotate(80deg)
    }
    100%{
        opacity: 1;
        transform: rotate(100deg)
    }
}