/**app.wxss**/
.container {
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  width:100%;
  height:100%;
  background:#460EBA;
  font-size: PingFangSC-Medium;
}
view{
  box-sizing: border-box;
}
.com-mask{
  width:100%;
  height:100%;
  position: fixed;
  left:0;
  top:0;
  padding-top:120rpx;
  background:rgba(0, 0, 0, 0.8);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.flx-ce{
  display: flex;
  align-items: center;
}
.flx-ce-ce{
  display: flex;
  align-items: center;
  justify-content: center;
}
.flx-ce-str{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.flx-start-clm{
  display: flex;
  flex-direction: column;
}
.flx-ce-bet{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flx-ce-no-clm{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.flx-ce-clm{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.flx-ce-bet-clm{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}
.flx-ce-end{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.tab-content{
  display: flex;
  align-items: center;
  border-radius:32rpx;
  border:2rpx solid rgba(255,255,255,0.5);
}
.nav-tab{
  font-size:28rpx;
  color:rgba(255,255,255,0.5);
  font-weight:500;
  width:200rpx;
  height:60rpx;
}
.tab-actived{
  background:linear-gradient(270deg,rgba(255,210,92,1) 0%,rgba(255,137,33,1) 100%);
  border-radius: 30rpx;
  color:rgba(255,255,255,1);
}
.go-back{
  position: fixed;
  top:62rpx;
  left:32rpx;
  z-index: 999;
  width:44rpx;
  height:44rpx;
}
.scaleBig{
    animation: scaleBig 1s forwards;
}
@keyframes scaleBig{
    from{
        transform: scale(0.5);
        opacity: 0.4
    }
    to{
        transform: scale(1);
        opacity: 1
    }
}