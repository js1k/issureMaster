    width:350rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.share-title{
    font-size:28rpx;
    font-weight:500;
    color:rgba(58,61,79,1);
}
.share-txt{
    font-size:22rpx;
    font-weight:400;
    color:rgba(58,61,79,1);
}
.qr-box{
    width:112rpx;
    height:112rpx;
}
.qr-img{
