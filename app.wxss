    width:100%;
    height:72rpx;
    display: block;
    margin-top:32rpx;
}
.save-btn{
    display: inline-block;
    background:rgba(255,187,1,1);
}
.share-btn{
    display: inline-block;
    background:rgba(27,214,118,1);
    margin:0 0 0 70rpx;
}
.share-btn-txt{
    width:240rpx;
    height:72rpx;
    font-size:30rpx;
    font-weight:400;
    border-radius:36rpx;
    color:rgba(255,255,255,1);
}
@keyframes changeScale{
    from{
        transform: scale(0.5)
    }
    to{
        transform: scale(1)
    }
}
@keyframes scaleBig{
    from{
        transform: scale(0.5);
        opacity: 0.4
    }
    to{
        transform: scale(1);
        opacity: 1
    }
}
@keyframes lightShow{
    0%{
        opacity: 0.3;
        transform: rotate(0deg)
    }
    40%{
        opacity: 1;
        transform: rotate(40deg)
    }
    50%{
        opacity: 0.6;
        transform: rotate(50deg)
    }
    60%{
        opacity: 1;
        transform: rotate(60deg)
    }
    80%{
        opacity: 0.6;
        transform: rotate(80deg)
    }
    100%{
        opacity: 1;
        transform: rotate(100deg)
    }
}
@keyframes ruleUp {
    from {
        transform: translateY(1500rpx);
    }
    to {
        transform: translateY(0);
    }
}
@keyframes slideUp{
    from{
        transform: translateY(40rpx);
        opacity: 0.6
    }
    to{
        transform: translateY(0);
        opacity: 1
    }
}
@keyframes slideDown{
    from{
        transform: translateY(-40rpx);
        opacity: 0.6
    }
    to{
        transform: translateY(0);
        opacity: 1
    }
}
@keyframes rotateDeg{
    0%{
        transform: translateX(-100rpx) rotate(0deg);
        opacity: 0
    }
    49%{
        transform: translateX(-100rpx) rotate(0deg);
        opacity: 0
    }
    50%{
        transform: translateX(-100rpx) rotate(0deg);
        opacity: 0
    }
    100%{
        transform: translateX(0rpx) rotate(180deg);
        opacity: 1
    }
}
@keyframes showBig{
    from{
        transform: scale(0.5);
    }
    to{
        transform: scale(1);
    }
}
@keyframes txtIn{
    0%{
        transform: translateX(-60rpx);
        opacity: 0
    }
    50%{
        transform: translateX(-60rpx);
        opacity: 0
    }
    100%{
        transform: translateX(0);
        opacity: 1
    }
}
@keyframes btnBig{
    0%{
        transform: scale(0.8);
        opacity: 0
    }
    59%{
        transform: scale(0.8);
        opacity: 0
    }
    60%{
        transform: scale(0.8);
        opacity: 0.8
    }
    100%{
        transform: scale(1);
        opacity: 1
    }
}